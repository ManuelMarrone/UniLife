<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/viola"
    tools:context=".View.Fragment.ListaPagamentiFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textUnilife"
        android:layout_width="92dp"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="#817EFF"
        android:text="@string/unilife"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView19"
        android:layout_width="165dp"
        android:layout_height="42dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:text="@string/divisione_spese"
        android:textColor="@color/black"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textUnilife" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RVListaPagamenti"
        android:layout_width="338dp"
        android:layout_height="299dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:background="@color/verdone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <ImageButton
        android:id="@+id/addButton"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="56dp"
        android:background="@color/verdeacqua"
        android:contentDescription="@string/add"
        android:src="@drawable/ic_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RVListaPagamenti" />

</androidx.constraintlayout.widget.ConstraintLayout>